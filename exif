from PIL import Image
from PIL import PngImagePlugin

# Load or create a simple image
img = Image.new("RGB", (100, 100), color="blue")

# Create fake EXIF metadata
secret_data = "Email: abc@yahoo.com. Password:123."

meta = PngImagePlugin.PngInfo()
meta.add_text("Comment", secret_data)

# Save with EXIF hidden data
img.save("exif_hidden_data.png", "PNG", pnginfo=meta)

print("Image with hidden EXIF created: exif_hidden_data.png")

